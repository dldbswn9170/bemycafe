		layeredPane.add(espressoButton);

		hotMilkButton = new JButton("hotMilk");
		hotMilkButton.setBounds(530, 210, 100, 50); // 예시 위치 및 크기, 조정 가능
		layeredPane.add(hotMilkButton);

		icedMilkButton = new JButton("icedMilk");
		icedMilkButton.setBounds(420, 270, 100, 50); // 예시 위치 및 크기, 조정 가능
		layeredPane.add(icedMilkButton);

		iceCubeButton = new JButton("iceCube");
		iceCubeButton.setBounds(530, 270, 100, 50); // 예시 위치 및 크기, 조정 가능
		layeredPane.add(iceCubeButton);

		matchaPowderButton = new JButton("matchaPowder");
		matchaPowderButton.setBounds(420, 330, 100, 50); // 예시 위치 및 크기, 조정 가능
		layeredPane.add(matchaPowderButton);

		chocoPowderButton = new JButton("chocoPowder");
		chocoPowderButton.setBounds(530, 330, 100, 50); // 예시 위치 및 크기, 조정 가능
		layeredPane.add(chocoPowderButton);
		
		
		// 인게임 타이머
		TimerPanel timerPanel = new TimerPanel(1, 30);
		JPanel timerPanelComponent = timerPanel.createTimerPanel();
		timerPanelComponent.setBounds(20, 0, 200, 30);
		layeredPane.add(timerPanelComponent);

		layeredPane.add("Center", hintbt); // 프레임에 버튼 추가 !!
		layeredPane.add(hint);
		
		
		// 인게임 메뉴판
		String[] strings = { "따뜻한 아메리카노", "차가운 아메리카노", "따뜻한 카페 라떼", "차가운 카페 라떼", "따뜻한 초코 라떼", "차가운 초코 라떼", "따뜻한 녹차 라떼",
						"차가운 녹차 라떼" };
		RandomStringPanel example = new RandomStringPanel(strings);
