	 private static class BackgroundMusicThread extends Thread {
	        public void run() {
	            try {
	                // 배경음악 파일 경로
	                File musicFile = new File("C:/Users/SAMSUNG/Downloads/baby-game-mane-without-laughter-8779.wav");

	                // 배경음악 파일을 읽어옴
	                AudioInputStream audioInputStream = AudioSystem.getAudioInputStream(musicFile);

	                // 클립 객체 생성 및 열기
	                Clip clip = AudioSystem.getClip();
	                clip.open(audioInputStream);

	                // 배경음악 반복 재생
	                clip.loop(Clip.LOOP_CONTINUOUSLY);

	                // 클립 리소스 해제
	                clip.addLineListener(event -> {
	                    if (event.getType() == javax.sound.sampled.LineEvent.Type.STOP)
	                        clip.close();
	                });
	            } catch (Exception e) {
	                e.printStackTrace();
	            }
	        }
	    }

	    public static void main(String[] args) {
	        SwingUtilities.invokeLater(() -> {
	            gameStart game = new gameStart();
	            game.setVisible(true);
	        });}

	    // 버튼 클릭 처리를 메소드로 묶음
	    private void handleButtonClick(String buttonText) {
	        if (currentButtonClickIndex < buttonClickOrder.length) {
	            buttonClickOrder[currentButtonClickIndex] = buttonText; // 버튼 텍스트 저장
	            currentButtonClickIndex++;
	            
	            for (int i = 0; i < 3; i++) {
	            	 System.out.println("Button " + (i + 1) + " Clicked: " + buttonClickOrder[i]);	            }
	        }
	        // 나머지 동작 처리
	    }
	

	

	// 커서 변경
	public void cursor() {
		Toolkit tk = Toolkit.getDefaultToolkit();
		Image cursorimage = tk.getImage("src/img/cursor.png");
		Point point = new Point(10, 10);
		Cursor cursor = tk.createCustomCursor(cursorimage, point, "");

		this.setCursor(cursor);
	}

