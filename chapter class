import java.awt.*; //자바의 Window GUI프로그래밍 도구를 모두 사용
import java.awt.event.ActionEvent;//이벤트 클래스를 사용하기 위함
import java.awt.event.ActionListener;//버튼 클릭 시 이벤크 동작을 위함
import java.awt.event.WindowAdapter;//windowevent 처리를 위함
import java.awt.event.WindowEvent;//AWT 컴퍼넌트에 의해 트리거되는 다양한 종류의 이벤트를 처리하는 인터페이스와 클래스를 제공 
import java.awt.image.BufferedImage;//이미지 확장하여 구현하기 위함
import java.io.File;//입출력에 필요한 파일 및 디렉토리에 관한 정보 다루기 위함
import java.io.IOException;//입출력 기능 수행 시 적절한 예외발생을 위함


import javax.imageio.ImageIO;//이미지 입출력을 찾고 간단한 인코딩 및 디코딩 수행을 위함
import javax.swing.*;
import javax.swing.event.*;

public class chapter extends JFrame {//chapter class 생성

	 
	public chapter() {
		chapterEx();
	}
	

//  커서 모양 변경 해야 함
	
public void chapterEx() {
	BufferedImage img = null;//버퍼에 이미지 올리기 위함

	JPanel panel=new JPanel();//Jpanel 생성
	
	JTabbedPane tabpane=new JTabbedPane();//tappane 생성
	Font font3 = new Font("고양체", Font.BOLD, 15); //폰트 설정

	panel.setLayout(new BorderLayout());//패널에 borderLayout설정

        //tappane에 "게임설명","레시피"의 tab을 추가, 이미지 아이콘을 이용하여 배경이미지 적용 및 swingconstants로 레이아웃의 위치 설정
	tabpane.addTab("게임설명", new JLabel(new ImageIcon("img/background.png"), SwingConstants.CENTER));
	tabpane.addTab("레시피", new JLabel(new ImageIcon("img/background.png"), SwingConstants.CENTER));

	tabpane.setFont(font3); // 폰트 적용
	tabpane.setSelectedIndex(0);//첫 탭 지정

	JButton button1=new JButton("Be ready?\n Clik and Let`s start~");//버튼 스타트 생성 및 텍스트 출력
	button1.setFont(font3); // 폰트 적용

	panel.add(tabpane,"Center");//tappane을 패널 가운데 정렬
	panel.add(button1,"South"); //시작 버튼 추가

	JFrame frame=new JFrame("Be My Cafe "); //새로운 프레임 생성
	frame.getContentPane().add(panel,"Center");//프레임에 패널 추가
	frame.setSize(922, 519); // 프레임 크기
	frame.setResizable(false); // 사이즈 재조정 불가능
	frame.setLocationRelativeTo(null); // 창이 가운데에 뜨도록 함
	frame.setVisible(true);//가시성 부여

        //시작 버튼 클릭시 이벤트 발생
	button1.addActionListener(new ActionListener() {
		@Override
		public void actionPerformed(ActionEvent e) {
			new gameStart();//서브 페이지인 gameStart()페이지로 넘어감

			}
		});
	}
}
	


